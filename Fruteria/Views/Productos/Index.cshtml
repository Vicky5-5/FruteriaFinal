@model IEnumerable<Fruteria.ViewModels.ProductosViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Productos</h2>
<p><strong>Bienvenido/a</strong>: @LoginManager.Instance.GetCurrentUser()</p>

<a href="@Url.Action("Create")" class="btn-crear-producto">
    <i class="fas fa-plus"></i>
    Crear Producto
</a>

<a href="@Url.Action("Index", "Carrito")" id="comprar">
    <i class="fas fa-shopping-cart"></i> Comprar
</a>

<a href="@Url.Action("Index", "Usuarios")" id="usuarios">
    <i class="fas fa-users"></i>Ver Usuarios
</a>
<br>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                Imagen
            </th>
            <th>
                Nombre del Producto
            </th>
            <th>
                Precio
            </th>
            <th>
                Stock
            </th>
            <th>
                Descripción
            </th>
            <th>
                Oferta
            </th>
            <th>
                Origen
            </th>
            <th>
                En Temporada
            </th>
            <th>
                Categoría
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImagenURL" width="100" height="100" alt="Imagen del producto" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oferta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origen)
                </td>
                <td>
                    @(item.EnTemporada ? "Sí" : "No")

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>

                <td>
                    <a href="@Url.Action("Edit", new { id = item.idProducto })">
                        <i id="icono" style="color: #e8d15e; font-size: 21px;" class="fa-solid fa-pen-to-square"></i>
                    </a> |

                    <a id="icono" href="@Url.Action("Details", new { id = item.idProducto })">
                        <i style="color: green; font-size: 21px;" class="fa-regular fa-file-lines"></i>
                    </a>
                    |
                    <a id="icono" href="@Url.Action("Detele", new { id = item.idProducto })">
                        <i style="color: red; font-size: 21px;" class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

<a href="@Url.Action("LogOut", "Login")" id="logOut">
    
    <i class="fas fa-sign-out-alt"></i> Log out
    
</a>
<style>
    #boton {
        border-radius: 5px;
        color: white;
    }


    .table, th, td {
        border: 1px black solid;
    }

    th {
        background-color: lightslategrey;
    }

    .btn-crear-producto {
        display: inline-block;
        padding: 10px 16px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-crear-producto:hover {
            background-color: #218838;
            color: white;
        }

    #comprar {
        display: inline-block;
        padding: 10px 16px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        #comprar:hover {
            background-color: #218838;
            color: white;
        }

    #icono {
        text-decoration: none;
        margin: 0 10px;
    }

    #usuarios {
        display: inline-block;
        padding: 10px 16px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        #usuarios:hover {
            background-color: #218838;
            color: white;
        }
    #logOut {
        display: inline-block;
        padding: 10px 16px;
        background-color: #f1983f;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }
</style>