@model IEnumerable<Fruteria.ViewModels.ProductosViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>
<p><strong>Bienvenido/a</strong>: @LoginManager.Instance.GetCurrentUser()</p>

<button id="boton">
    <p>
        @Html.ActionLink("Crear Producto", "Create", new { @class = "button" })
    </p>

</button>
<p>@Html.ActionLink("Ir a comprar productos", "Index", "Carrito")</p>
<p id="boton">@Html.ActionLink("Ver Usuarios", "Index", "Usuarios")</p>

<table class="table">
    <thead>
        <tr>

            <th>
                Nombre del Producto
            </th>
            <th>
                Precio
            </th>
            <th>
                Stock
            </th>
            <th>
                Descripción
            </th>
            <th>
                Oferta
            </th>
            <th>
                Origen
            </th>
            <th>
                En Temporada
            </th>
            <th>
                Categoría
            </th>
            <th>
                Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Oferta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origen)
                </td>
                <td>
                    @(item.EnTemporada ? "Sí" : "No")

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria)
                </td>
                <td>
                    <img src="@item.ImagenURL" width="100" height="100" alt="Imagen del producto" />
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idProducto })  |
                    @Html.ActionLink("Detalles", "Details", new { id = item.idProducto }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.idProducto })
                </td>
            </tr>

        }
    </tbody>
</table>

<h6>Para Cerrar Sesión: </h6>
@Html.ActionLink("Log Out", "LogOut", "Login")
<style>
    #boton {
        border-radius: 5px;
        color: white;
    }

  
    .table, th, td {
        border: 1px black solid;
    }

    th {
        background-color: lightslategrey;
    }

</style>